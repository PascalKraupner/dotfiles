{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "mcp": {
    "brightdata-web": {
      "type": "remote",
      "url": "https://mcp.brightdata.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {file:~/.secrets/brightdata_key}"
      }
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{file:~/.secrets/context7_key}"
      }
    }
  }
}
